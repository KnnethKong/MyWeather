<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#316fad">

        <TextView
            android:id="@+id/sign_txt_back"
            style="@style/sign_title"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/sign_txt_title"
            android:text="返回" />

        <TextView
            android:id="@+id/sign_txt_title"
            style="@style/sign_title"

            android:layout_alignTop="@+id/sing_txt_older"
            android:layout_centerHorizontal="true"
            android:text="上/下班打卡" />

        <TextView
            android:id="@+id/sing_txt_older"
            style="@style/sign_title"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="历史记录"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/sign_rela"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1"
        android:background="@drawable/sigin_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sign_txt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="2016-07-08"
            android:textColor="#ffff"
            android:textSize="24dp" />

        <Button
            android:id="@+id/sign_signbtn"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:layout_marginTop="23dp"
            android:background="@drawable/sigin_btn_bg"
            android:text="打卡"
            android:textColor="#00a5e0"
            android:textSize="22dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp"
            android:gravity="center|bottom"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_dialog_map" />

            <TextView
                android:id="@+id/sign_txt_map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:singleLine="true"
                android:textSize="18dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight=".9"
        android:background="#5882a3"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:text="今日签到"
            android:textColor="#ffff"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="#bababa" />


        <LinearLayout
            android:id="@+id/sign_addlinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

        </LinearLayout>

        <TextView
            android:id="@+id/sigin_zanwu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="暂无"
            android:textColor="#bababa"
            android:textSize="22dp"
            android:visibility="gone" />

        <ListView
            android:id="@+id/sign_allman"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

    </LinearLayout>


</LinearLayout>